
<div class="container mx-auto p-4">
  <header>
        <input type="checkbox" name="" id="toggler">
        <label for="toggler" class="fas fa-bars"></label>
        <div class="logo">Claire de lune <span>.</span></div>
        <nav class="nav">
            <a href="/">Home</a>
            <a href="/realtimeproducts">Real Time Products</a>
            <a href="/chat">Chat</a>
            <a href="/products">Products Page</a>
            <a href="/profile">Profile</a>
            {{!-- <a href="/signup">Sign Up</a>
            <a href="/login">Login</a> --}}
        </nav>
            <div class="iconos">  
            <a href="#" class="fas fa-shopping-cart" id="verCarrito"></a>
            </div>
    </header>
    <h1 class="titulo">Home</h1>

    <table>
      <thead class="card">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Code</th>
          <th>Stock</th>
          <th>Status</th>
          <th>Add to Cart</th>
        </tr>
      </thead>
      <tbody>
        {{#each productos}}
          <tr class="producto">
            <td>{{this._id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>${{this.price}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.status}}</td>
            <th> <button class="button"data-product-id="{{this._id}}">Add to Cart</button></th>
          </tr>
        {{/each}}
      </tbody>
    </table>
</div>

<script src="/js/productos.js"></script>