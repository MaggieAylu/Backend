<div class="container mx-auto p-4">
    <h1 class="titulo">Products Page</h1>

    <table>
      <thead class="card">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Code</th>
          <th>Stock</th>
          <th>Status</th>
          <th>Add to Cart</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
          <tr class="producto">
            <td>{{this._id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>${{this.price}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.status}}</td>
            <th> <button class="button"data-product-id="{{this._id}}">Add to Cart</button></th>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{!-- Links to pagination --}}
    <div class="pagination">
      <a href="/products?limit={{limit}}&page=1" class="pagination">First Page</a>
      {{#if hasPrevPage}}
        <a href="/products?limit={{limit}}&page={{prevPage}}" class="pagination">Prev Page</a>
      {{/if}}
      {{#if hasNextPage}}
        <a href="/products?limit={{limit}}&page={{nextPage}}" class="pagination">Next Page</a>
      {{/if}}
      <a href="/products?limit={{limit}}&page={{totalPages}}" class="pagination">Last Page</a>
    </div>
